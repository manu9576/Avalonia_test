<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTest.MainWindow"
        Title="AvaloniaTest">

  <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,Auto,Auto,Auto,*"  Margin="4">

    <TextBox Grid.Row="1" Grid.Column="1">Coucou</TextBox>

        <Button Grid.Row="2" Grid.Column="1" Command="{Binding ActionButton}">RAZ Count</Button>

    <TextBlock Grid.Row="3" Grid.Column="1" Name="tb_Text" Text="{Binding Text}"/>
      
  </Grid>
</Window>
